<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:background="@drawable/gradient_background"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="pet store name"
        app:layout_constraintBottom_toTopOf="@+id/rtBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgView"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="100dp"/>

    <RatingBar
        android:id="@+id/rtBar"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:isIndicator="true"
        android:numStars="5"
        android:progressTint="#FDD835"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="313dp" />

    <TextView
        android:id="@+id/adView"
        android:layout_width="261dp"
        android:layout_height="65dp"
        android:layout_marginTop="44dp"
        android:text="address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rtBar"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:id="@+id/phView"
        android:layout_width="263dp"
        android:layout_height="72dp"
        android:layout_marginTop="20dp"
        android:text="phone no."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adView"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:id="@+id/hView"
        android:layout_width="265dp"
        android:layout_height="67dp"
        android:layout_marginTop="28dp"
        android:text="hours"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phView"
        android:layout_marginLeft="100dp"
        />
</LinearLayout>